
@{
    ViewBag.Title = "Product";
}

@using MVC_Template.Models
@model List<Product>

<div class="row">
    <div class="col-lg-12">
        <div class="block">
            <div class="block-heading">
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                               
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Amount</th>
                                <th>Units In Stock</th>
                                <th>Reorder Unit</th>
                                <th>ReorderLevel</th>
                                <th>Category</th>
                                <th>Supplier</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product prd in Model)
                            {
                            <tr>
                                <td>@prd.ProductName</td>
                                <td>@prd.UnitPrice</td>
                                <td>@prd.QuantityPerUnit</td>
                                <td>@prd.UnitsInStock</td>
                                <td>@prd.UnitsOnOrder</td>
                                <td>@prd.ReorderLevel</td>
                                <td style="color:lightseagreen;">
                                    @if (prd.Category.CategoryName == null)
                                    {
                                    }
                                    else

                                    {
                                        @prd.Category.CategoryName
                                    }
                                                            </td>
                                <td style="color:saddlebrown;">
                                    @if (prd.Supplier.CompanyName == null)
                                    {

                                    }
                                    else
                                    {
                                        @prd.Supplier.CompanyName
                                    }


                                </td>
                                
                                
                                <td>
                                    @if (prd.Discontinued == true)
                                    {
                                    <span class="icon icon-cross highlight-color-red-text"></span>}
                                    else

                                    {
                                        <span class="icon icon-check highlight-color-green-text"></span>}
                                 </td>
                               
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

